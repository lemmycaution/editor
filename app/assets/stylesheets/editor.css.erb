.ace_editor{
	position:relative !important;
	width:77.8%;
	height:407px;
	display:none;
}

<%= Editor.editables.map{|e| "label[for=#{e}_body]"}.join(",") %>{
	margin-bottom: 400px;
}

.switches a{
	padding:7px 5px;
	border:1px solid #e4e4e4;
	text-decoration:none;
	cursor:pointer;
	display:inline-block;
}

.switches a.active{
	background:#fff;
}

.translations a{
	display: inline-block;
	background: #fff;
	text-shadow: white 0 1px 0;
	border: solid 1px #CDCDCD;
	border-color: #D4D4D4;
	border-top-color: #CDCDCD;
	border-right-color: #D4D4D4;
	border-bottom: none;
	border-left-color: #D4D4D4;

	font-size: 1.0em;
	font-weight: bold;
	line-height: 18px;
	margin-bottom: 0;
	color: #c8c8c8;
	padding: 5px 10px 3px 10px;
	text-decoration:none;
}

.translations a.active{
	color: #5E6469;
	background: #EFEFEF;
	filter: progid:DXImageTransform.Microsoft.gradient(startColorstr=#dfe1e2, endColorstr=#efefef);
	-ms-filter: progid:DXImageTransform.Microsoft.gradient(startColorstr=#dfe1e2, endColorstr=#efefef);
	background: -webkit-gradient(linear, left top, left bottom, from(#DFE1E2), to(#EFEFEF));
	background: -moz-linear-gradient(-90deg, #DFE1E2, #EFEFEF);
}